---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import Card from '@components/layout/Card.astro';
import IntroCard from '@components/home/IntroCard.astro';

const builtWith = [
  { name: 'Astro', url: 'https://astro.build/' },
  { name: 'UnoCSS', url: 'https://uno.antfu.me/' },
  {
    name: 'Content Collections',
    url: 'https://docs.astro.build/en/guides/content-collections/',
  },
  { name: 'RSS', url: 'https://docs.astro.build/en/guides/rss/' },
  {
    name: 'Sitemap',
    url: 'https://docs.astro.build/en/guides/integrations-guide/sitemap/',
  },
  { name: 'Vercel', url: 'https://vercel.com' },
  { name: 'TypeScript', url: 'https://www.typescriptlang.org/' },
];
---

<Layout
  title='home'
  pageTitle='tygutowski/home'
  description='tygutowski'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>about me</h2>
        <IntroCard />
        <div class='col-span-4'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 comic-sans'>
            about me
          </h2>
          <p class='poppins'>
            im tygutowski, a software engineer based in virginia. i think games are the most expressive form of art, and i love playing them, making them, and analysing them. im a big fan of optimization, though i dislike frontend development.
            <br><br>
            i am fairly active on <a href="https://bsky.app/profile/tygutowski.bsky.social" style="color:white; font-weight: bold;">bluesky</a>.
            <br><br>
            currently im working on two games:
            <a href="http://localhost:4321/blog/hurticulture" style="color:white; font-weight: bold;">hurticulture</a>, a coop farming horror, and 
            <a href="http://localhost:4321/blog/MIDAS" style="color:white; font-weight: bold;">MIDAS</a>, a puzzle platformer.
            <br><br>
            i expect this blog to be populated with devlogs of my games, case studies about game design, and anything i may be temporarily passionate about.
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
